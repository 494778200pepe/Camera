<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.jcoder.camera2.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/change"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/change"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:text="change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/picture" />

    <Button
        android:id="@+id/picture"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:text="picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/change"
        app:layout_constraintRight_toLeftOf="@+id/record"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/record"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:text="record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/picture"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>

